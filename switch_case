        int qtdLivros = sc.nextInt();
        
        criterio1 = (0.25*qtdLivros+7.50);
        criterio2 = (0.50*qtdLivros+2.50);
        
        if (criterioA<criterioB) {
            System.out.println("Melhor opção é o critério 1. Valor = " + criterio1);
        } else if (criterio2<criterio1)  {
